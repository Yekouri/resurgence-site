{% extends 'base.html.twig' %}

{% block title %}Create user{% endblock %}

{% block body %}
{% include('navbar.html.twig') %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if success_message %}
        {% if error %}
            <span class="error"> {{ success_message }}</span>
        {% else %}
            <span class="success"> {{ success_message }}</span>
        {% endif %}
    {% endif %}
    <h1>Create a new user</h1>

    <form action="{{ path('admin_user_create') }}" method="POST">
        <input type="text" name="username" placeholder="Username">
        <input type="password" name="password">
        <select name="roles">
                <option value="" selected="selected">User</option>
                <option value="ROLE_ADMIN">Admin</option>
        </select>
        <button type="submit">Create</button>
    </form>
    <a href="{{ path('admin_user_list') }}">Back to list</a>
</div>
{% endblock %}
