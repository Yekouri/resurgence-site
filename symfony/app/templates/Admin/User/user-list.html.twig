{% extends 'base.html.twig' %}

{% block title %}Hello AdminUserController!{% endblock %}

{% block body %}
{% include('navbar.html.twig') %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('admin_user_create') }}">Create user</a>
    <a href="{{ path('admin') }}">Back to admin panel</a>
    <table>
        <thead>
            <tr>
                <th>Users<th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        {% for role in user.roles %}
                            {{ role }},
                        {% endfor %}
                    </td>
                    <td data-id="{{ user.id }}">
                        <button class="delete-user-button btn btn-primary" type="button">Delete User</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
